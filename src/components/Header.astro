---
const navigation = [
  { name: 'Servicios', href: '/servicios' },
  { name: 'Conóceme', href: '/sobre-mi' },
  { name: 'Contacto', href: '/contacto' },
]
---

<header class="bg-white shadow-sm">
  <nav class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-12 xl:px-16">
    <div class="flex justify-between items-center py-6">
      <div class="flex-shrink-0">
        <a href="/" class="flex items-center group">
          <span class="text-2xl font-display font-semibold text-gray-900 tracking-tight">
            REDACTOR<span class="font-light">SEO</span>
          </span>
          <div class="relative ml-2">
            <div class="w-2 h-2 bg-naranja-vibrante rounded-full dot-pulse"></div>
          </div>
        </a>
      </div>
      
      <!-- Desktop Navigation -->
      <div class="hidden md:flex md:ml-auto md:items-baseline md:space-x-4">
        {navigation.map((item) => (
          <a
            href={item.href}
            class="text-gray-600 hover:text-gray-900 px-3 py-2 rounded-md text-sm font-medium transition-colors"
          >
            {item.name}
          </a>
        ))}
      </div>
      
      <!-- Mobile menu button -->
      <div class="md:hidden">
        <button
          type="button"
          class="text-gray-600 hover:text-gray-900 p-2"
          id="mobile-menu-button"
          aria-label="Abrir menú de navegación"
          aria-expanded="false"
          aria-controls="mobile-menu"
        >
          <svg class="h-6 w-6" fill="none" viewBox="0 0 24 24" stroke="currentColor" aria-hidden="true">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16M4 18h16" />
          </svg>
        </button>
      </div>
    </div>
  </nav>

  <!-- Mobile Navigation Overlay -->
  <div class="md:hidden fixed left-0 right-0 bottom-0 top-24 bg-black/20 backdrop-blur-sm hidden z-40" id="mobile-menu-overlay"></div>

  <!-- Mobile Navigation -->
  <div class="md:hidden hidden relative z-50 bg-white shadow-lg w-full" id="mobile-menu">
    <div class="px-4 pt-2 pb-6 space-y-1">
      {navigation.slice(0, -1).map((item) => (
        <a
          href={item.href}
          class="text-gray-600 hover:text-gray-900 block px-3 py-2 rounded-md text-base font-medium"
        >
          {item.name}
        </a>
      ))}
      <a
        href="/contacto"
        class="bg-naranja-vibrante text-white block px-3 py-2 rounded-md text-base font-body font-bold mt-6 text-center"
      >
        Contacto
      </a>
    </div>
  </div>
</header>

<script>
  // Optimized mobile menu toggle - defer execution
  const b=document.getElementById('mobile-menu-button'),m=document.getElementById('mobile-menu'),o=document.getElementById('mobile-menu-overlay');
  const t=()=>{const h=m?.classList.contains('hidden');m?.classList.toggle('hidden');o?.classList.toggle('hidden');b?.setAttribute('aria-expanded',h?'true':'false')};
  b?.addEventListener('click',t);o?.addEventListener('click',t);
</script>