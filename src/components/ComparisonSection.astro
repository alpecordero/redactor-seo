---
interface Props {
  title: string;
  subtitle: string;
  leftColumn: {
    title: string;
    items: string[];
  };
  rightColumn: {
    title: string;
    items: string[];
  };
}

const { title, subtitle, leftColumn, rightColumn } = Astro.props;
---

<section class="py-20 md:py-32 lg:py-40 bg-gray-50">
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-12 xl:px-16">
    <!-- Header -->
    <div class="text-center mb-16">
      <h2 class="text-3xl md:text-4xl font-bold text-gray-900 mb-4">{title}</h2>
      <p class="text-xl text-gray-600">{subtitle}</p>
    </div>

    <!-- Comparison Grid -->
    <div class="grid grid-cols-1 lg:grid-cols-2 gap-8">
      <!-- Left Column -->
      <div class="bg-white border border-gray-200 rounded-lg p-8 relative">
        <h3 class="text-2xl font-bold text-gray-800 mb-6 text-center">{leftColumn.title}</h3>
        <ul class="space-y-4">
          {leftColumn.items.map((item) => (
            <li class="flex items-start">
              <svg class="w-5 h-5 text-red-500 mt-1 mr-3 flex-shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12"></path>
              </svg>
              <span class="text-gray-700 leading-relaxed">{item}</span>
            </li>
          ))}
        </ul>
      </div>

      <!-- Right Column -->
      <div class="bg-white border-2 border-naranja-vibrante rounded-lg p-8 relative shadow-lg">
        <!-- Badge destacado -->
        <div class="absolute -top-4 left-1/2 transform -translate-x-1/2">
          <span class="bg-naranja-vibrante text-white px-4 py-2 rounded-full text-sm font-medium">
            âœ“ Diferenciado
          </span>
        </div>

        <h3 class="text-2xl font-bold text-gray-800 mb-6 text-center">{rightColumn.title}</h3>
        <ul class="space-y-4">
          {rightColumn.items.map((item) => (
            <li class="flex items-start">
              <svg class="w-5 h-5 text-naranja-vibrante mt-1 mr-3 flex-shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"></path>
              </svg>
              <span class="text-gray-700 leading-relaxed">{item}</span>
            </li>
          ))}
        </ul>
      </div>
    </div>
  </div>
</section>