---
import Header from '../components/Header.astro'
import Footer from '../components/Footer.astro'
import '../styles/global.css'

export interface Props {
  title: string
  description?: string
}

const { title, description = "Servicios profesionales de redacci√≥n SEO para impulsar tu negocio online" } = Astro.props
---

<!DOCTYPE html>
<html lang="es">
  <head>
    <meta charset="UTF-8" />
    <meta name="description" content={description} />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <meta name="robots" content="noindex, nofollow" />

    <!-- Resource hints for performance -->
    <link rel="dns-prefetch" href="//fonts.googleapis.com">
    <link rel="dns-prefetch" href="//fonts.gstatic.com">

    <!-- Favicon optimized -->
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="generator" content={Astro.generator} />
    <!-- Optimized font loading for critical performance -->
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <!-- Preload critical font weights -->
    <link rel="preload" href="https://fonts.googleapis.com/css2?family=Inter:wght@400;600;700&display=swap&subset=latin" as="style">
    <!-- Load fonts with font-display swap for faster rendering -->
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;600;700&display=swap&subset=latin" rel="stylesheet" media="print" onload="this.media='all'">
    <noscript><link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;600;700&display=swap&subset=latin" rel="stylesheet"></noscript>
    <title>{title}</title>

    <!-- Critical CSS inline for immediate rendering -->
    <style>
      /* Critical fonts and base styles */
      html { font-family: ui-sans-serif, system-ui, sans-serif; }
      body { margin: 0; background: white; }

      /* Critical layout styles for above-the-fold content */
      .hero-critical {
        position: relative;
        padding: 5rem 1rem;
        background: white;
        text-align: center;
      }

      /* Critical typography for hero */
      .hero-title {
        font-weight: 700;
        line-height: 1;
        letter-spacing: -0.025em;
        margin-bottom: 3rem;
      }

      /* Critical Google colors */
      .google-g1 { color: #4285F4; }
      .google-o1 { color: #EA4335; }
      .google-o2 { color: #FBBC04; }
      .google-g2 { color: #4285F4; }
      .google-l { color: #34A853; }
      .google-e { color: #EA4335; }

      /* Critical button styles */
      .hero-button {
        background: #1f2937;
        color: white;
        padding: 1rem 2rem;
        border-radius: 0.5rem;
        border: 2px solid #1f2937;
        font-weight: 500;
        font-size: 1.125rem;
        cursor: pointer;
        transition: all 0.3s ease;
      }
    </style>


    <slot name="head" />
  </head>
  <body class="bg-white font-body">
    <Header />
    <main>
      <slot />
    </main>
    <Footer />
  </body>
</html>