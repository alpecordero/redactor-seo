---
import Layout from '../layouts/Layout.astro'

import content from '../content/renovar-web-y-blog-empresa/index.json'

const {
  hero,
  problemSection,
  whatIncludesSection,
  forWhomSection,
  investmentSection,
  processSection,
  faqSection,
  resultsSection,
  finalCtaSection
} = content

const baseUrl = 'https://redactorseo.es'
---

<Layout title={content.seo.title} description={content.seo.description}>
  <Fragment slot="head">
    <script type="application/ld+json" set:html={JSON.stringify({
      "@context": "https://schema.org",
      "@type": "Service",
      "name": "Renovación Web y Blog Estratégico",
      "description": "Servicio completo de redacción web y blog para negocios locales",
      "serviceType": "Redacción Web y Blog",
      "url": `${baseUrl}/renovar-web-y-blog-empresa`,
      "provider": {
        "@type": "ProfessionalService",
        "name": "Redactor SEO",
        "url": baseUrl
      },
      "areaServed": "ES",
      "offers": {
        "@type": "Offer",
        "price": "1399",
        "priceCurrency": "EUR",
        "availability": "https://schema.org/InStock"
      }
    })} />
  </Fragment>

  <!-- Hero Section -->
  <section class="relative py-16 md:py-20 lg:py-24 bg-white overflow-hidden">
    <div class="absolute inset-0">
      <div class="absolute top-20 right-20 w-32 h-32 bg-gray-50 rounded-full -z-10"></div>
      <div class="absolute bottom-32 left-16 w-20 h-20 bg-naranja-vibrante/5 rounded-full -z-10"></div>
    </div>

    <div class="relative px-4 sm:px-6 lg:px-12 xl:px-16 w-full">
      <div class="max-w-3xl mx-auto text-center">
        <div class="mb-8 lg:mb-12">
          <p class="text-sm font-medium tracking-wide text-gray-500 uppercase">{hero.subtitle}</p>
        </div>

        <h1 class="text-4xl md:text-5xl lg:text-6xl font-bold text-gray-900 leading-tight mb-8 lg:mb-12">
          {hero.title}
        </h1>

        <p class="text-xl md:text-2xl text-gray-600 leading-relaxed mb-12 lg:mb-16 max-w-2xl mx-auto">
          {hero.description}
        </p>

        <a href={hero.ctaLink} class="bg-azul-profundo text-white px-10 py-5 rounded-lg text-xl font-bold hover:bg-gray-800 hover:scale-105 transition-all duration-300 inline-block shadow-lg">
          {hero.ctaText}
        </a>

        <div class="mt-16 mb-0 flex justify-center">
          <div class="animate-bounce">
            <svg width="40" height="40" viewBox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg" class="text-naranja-vibrante">
              <path d="M7 13L12 18L17 13M12 6V17" stroke="currentColor" stroke-width="2.5" stroke-linecap="round" stroke-linejoin="round"/>
            </svg>
          </div>
        </div>
      </div>
    </div>
  </section>

  <!-- Problem Section -->
  <section class="py-20 md:py-32 lg:py-40 bg-gray-50">
    <div class="max-w-4xl mx-auto px-4 sm:px-6 lg:px-12 xl:px-16">
      <div class="text-center">
        <h2 class="text-3xl md:text-4xl font-display font-bold text-gray-900 mb-8">
          {problemSection.title}
        </h2>
        <p class="text-xl text-gray-600 leading-relaxed max-w-3xl mx-auto">
          {problemSection.content}
        </p>
      </div>
    </div>
  </section>

  <!-- What Includes Section -->
  <section class="py-20 md:py-32 lg:py-40 bg-white">
    <div class="max-w-5xl mx-auto px-4 sm:px-6 lg:px-12 xl:px-16">
      <div class="text-center mb-16">
        <h2 class="text-3xl md:text-4xl font-display font-bold text-gray-900 mb-12">
          {whatIncludesSection.title}
        </h2>
      </div>

      <div class="space-y-16">
        <!-- Web Redaction -->
        <div class="max-w-3xl mx-auto">
          <h3 class="text-2xl font-bold text-gray-900 mb-6 text-center">
            {whatIncludesSection.webRedaction.subtitle}
          </h3>
          <div class="space-y-3">
            {whatIncludesSection.webRedaction.items.map((item) => (
              <div class="flex items-start space-x-3">
                <svg class="w-6 h-6 text-naranja-vibrante flex-shrink-0 mt-0.5" fill="currentColor" viewBox="0 0 20 20">
                  <path fill-rule="evenodd" d="M16.707 5.293a1 1 0 010 1.414l-8 8a1 1 0 01-1.414 0l-4-4a1 1 0 011.414-1.414L8 12.586l7.293-7.293a1 1 0 011.414 0z" clip-rule="evenodd" />
                </svg>
                <span class="text-lg text-gray-700">{item}</span>
              </div>
            ))}
          </div>
        </div>

        <!-- Strategic Blog -->
        <div class="max-w-3xl mx-auto">
          <h3 class="text-2xl font-bold text-gray-900 mb-6 text-center">
            {whatIncludesSection.strategicBlog.subtitle}
          </h3>
          <div class="space-y-3">
            {whatIncludesSection.strategicBlog.items.map((item) => (
              <div class="flex items-start space-x-3">
                <svg class="w-6 h-6 text-naranja-vibrante flex-shrink-0 mt-0.5" fill="currentColor" viewBox="0 0 20 20">
                  <path fill-rule="evenodd" d="M16.707 5.293a1 1 0 010 1.414l-8 8a1 1 0 01-1.414 0l-4-4a1 1 0 011.414-1.414L8 12.586l7.293-7.293a1 1 0 011.414 0z" clip-rule="evenodd" />
                </svg>
                <span class="text-lg text-gray-700">{item}</span>
              </div>
            ))}
          </div>
        </div>

        <!-- Triple Optimization -->
        <div class="max-w-3xl mx-auto">
          <h3 class="text-2xl font-bold text-gray-900 mb-6 text-center">
            {whatIncludesSection.tripleOptimization.subtitle}
          </h3>
          <div class="space-y-3">
            {whatIncludesSection.tripleOptimization.items.map((item) => (
              <div class="flex items-start space-x-3">
                <svg class="w-6 h-6 text-naranja-vibrante flex-shrink-0 mt-0.5" fill="currentColor" viewBox="0 0 20 20">
                  <path fill-rule="evenodd" d="M16.707 5.293a1 1 0 010 1.414l-8 8a1 1 0 01-1.414 0l-4-4a1 1 0 011.414-1.414L8 12.586l7.293-7.293a1 1 0 011.414 0z" clip-rule="evenodd" />
                </svg>
                <span class="text-lg text-gray-700">{item}</span>
              </div>
            ))}
          </div>
        </div>
      </div>
    </div>
  </section>

  <!-- For Whom Section -->
  <section class="py-20 md:py-32 lg:py-40 bg-gray-50">
    <div class="max-w-4xl mx-auto px-4 sm:px-6 lg:px-12 xl:px-16">
      <div class="text-center mb-12">
        <h2 class="text-3xl md:text-4xl font-display font-bold text-gray-900 mb-8">
          {forWhomSection.title}
        </h2>
      </div>

      <div class="max-w-3xl mx-auto space-y-4">
        {forWhomSection.items.map((item) => (
          <div class="flex items-start space-x-3 bg-white p-6 rounded-lg">
            <svg class="w-6 h-6 text-naranja-vibrante flex-shrink-0 mt-0.5" fill="currentColor" viewBox="0 0 20 20">
              <path fill-rule="evenodd" d="M16.707 5.293a1 1 0 010 1.414l-8 8a1 1 0 01-1.414 0l-4-4a1 1 0 011.414-1.414L8 12.586l7.293-7.293a1 1 0 011.414 0z" clip-rule="evenodd" />
            </svg>
            <span class="text-lg text-gray-700">{item}</span>
          </div>
        ))}
      </div>
    </div>
  </section>

  <!-- Investment Section -->
  <section class="py-20 md:py-32 lg:py-40 bg-white">
    <div class="max-w-4xl mx-auto px-4 sm:px-6 lg:px-12 xl:px-16">
      <div class="text-center mb-12">
        <h2 class="text-3xl md:text-4xl font-display font-bold text-gray-900 mb-8">
          {investmentSection.title}
        </h2>
      </div>

      <div class="max-w-2xl mx-auto bg-gray-50 rounded-2xl p-8 mb-12">
        <div class="space-y-4 mb-6">
          <div class="text-lg text-gray-600 font-medium text-center mb-4">Si lo contratas por separado:</div>

          <div class="flex justify-between items-center pb-3 border-b border-gray-300">
            <span class="text-gray-700">{investmentSection.comparison.separate.webComplete.label}</span>
            <span class="text-gray-900 font-bold">{investmentSection.comparison.separate.webComplete.price}</span>
          </div>

          <div class="flex justify-between items-center pb-3 border-b border-gray-300">
            <span class="text-gray-700">{investmentSection.comparison.separate.blogFirst.label}</span>
            <span class="text-gray-900 font-bold">{investmentSection.comparison.separate.blogFirst.price}</span>
          </div>

          <div class="flex justify-between items-center pt-2 pb-3 border-b-2 border-gray-400">
            <span class="text-gray-900 font-bold">TOTAL</span>
            <span class="text-gray-900 font-bold text-xl">{investmentSection.comparison.separate.total}</span>
          </div>
        </div>

        <div class="bg-azul-profundo text-white rounded-xl p-6 mb-4">
          <div class="flex justify-between items-center mb-2">
            <span class="text-lg font-bold">{investmentSection.comparison.package.label}</span>
            <span class="text-3xl font-bold">{investmentSection.comparison.package.price}</span>
          </div>
        </div>

        <div class="bg-naranja-vibrante text-white rounded-xl p-4 text-center">
          <span class="text-xl font-bold">AHORRAS {investmentSection.comparison.savings}</span>
        </div>
      </div>

      <div class="text-center">
        <a href={investmentSection.ctaLink} class="bg-azul-profundo text-white px-10 py-5 rounded-lg text-xl font-bold hover:bg-gray-800 hover:scale-105 transition-all duration-300 inline-block shadow-lg">
          {investmentSection.ctaText}
        </a>
      </div>
    </div>
  </section>

  <!-- Process Section -->
  <section class="py-20 md:py-32 lg:py-40 bg-gray-50">
    <div class="max-w-5xl mx-auto px-4 sm:px-6 lg:px-12 xl:px-16">
      <div class="text-center mb-16">
        <h2 class="text-3xl md:text-4xl font-display font-bold text-gray-900 mb-8">
          {processSection.title}
        </h2>
      </div>

      <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-8">
        {processSection.steps.map((step) => (
          <div class="bg-white rounded-lg p-6 text-center">
            <div class="w-16 h-16 bg-naranja-vibrante text-white rounded-full flex items-center justify-center text-2xl font-bold mx-auto mb-4">
              {step.number}
            </div>
            <h3 class="text-lg font-bold text-gray-900 mb-2">{step.title}</h3>
            <p class="text-sm text-naranja-vibrante font-medium mb-3">{step.duration}</p>
            <p class="text-gray-600">{step.description}</p>
          </div>
        ))}
      </div>
    </div>
  </section>

  <!-- Results Section -->
  {resultsSection.enabled && (
    <section class="py-20 md:py-32 lg:py-40 bg-white">
      <div class="max-w-4xl mx-auto px-4 sm:px-6 lg:px-12 xl:px-16">
        <div class="text-center mb-12">
          <h2 class="text-3xl md:text-4xl font-display font-bold text-gray-900 mb-8">
            {resultsSection.title}
          </h2>
        </div>

        <div class="grid grid-cols-1 md:grid-cols-3 gap-8 max-w-4xl mx-auto">
          {resultsSection.examples.map((example) => (
            <div class="bg-gray-50 rounded-lg p-6 text-center">
              <div class="text-4xl mb-4">📈</div>
              <h3 class="text-lg font-bold text-gray-900 mb-2">{example.client}</h3>
              <p class="text-gray-700">{example.result}</p>
            </div>
          ))}
        </div>
      </div>
    </section>
  )}

  <!-- FAQ Section -->
  <section class="py-20 md:py-32 lg:py-40 bg-gray-50">
    <div class="max-w-4xl mx-auto px-4 sm:px-6 lg:px-12 xl:px-16">
      <div class="text-center mb-16">
        <h2 class="text-3xl md:text-4xl font-bold text-gray-900 mb-4">
          {faqSection.title}
        </h2>
      </div>

      <div class="space-y-4 max-w-3xl mx-auto">
        {faqSection.questions.map((faq) => (
          <details class="bg-white rounded-lg border border-gray-200 overflow-hidden group">
            <summary class="flex justify-between items-center p-6 cursor-pointer">
              <h3 class="text-lg font-semibold text-gray-900">
                {faq.question}
              </h3>
              <svg class="w-5 h-5 text-gray-400 group-open:rotate-180 transition-transform duration-200" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 9l-7 7-7-7" />
              </svg>
            </summary>
            <div class="px-6 pb-6">
              <p class="text-gray-600 leading-relaxed">{faq.answer}</p>
            </div>
          </details>
        ))}
      </div>
    </div>
  </section>

  <!-- Final CTA Section -->
  <section class="py-20 md:py-32 lg:py-40 bg-black text-white">
    <div class="max-w-4xl mx-auto px-4 sm:px-6 lg:px-12 xl:px-16 text-center">
      <div class="mb-12">
        <div class="text-4xl mb-4">✅</div>
        <h2 class="text-3xl md:text-4xl font-bold mb-6">{finalCtaSection.guaranteeTitle}</h2>
        <p class="text-xl text-gray-300 leading-relaxed max-w-3xl mx-auto">{finalCtaSection.guaranteeDescription}</p>
      </div>

      <div class="bg-white/10 backdrop-blur-sm border border-white/20 rounded-2xl p-8 mb-8">
        <h3 class="text-2xl font-bold mb-6">{finalCtaSection.title}</h3>
        <p class="text-lg text-gray-300 mb-8">{finalCtaSection.description}</p>

        <div class="grid grid-cols-1 md:grid-cols-2 gap-3 text-left mb-8">
          {finalCtaSection.features.map((feature) => (
            <div class="flex items-center space-x-3">
              <svg class="w-4 h-4 text-white flex-shrink-0" fill="currentColor" viewBox="0 0 20 20">
                <path fill-rule="evenodd" d="M16.707 5.293a1 1 0 010 1.414l-8 8a1 1 0 01-1.414 0l-4-4a1 1 0 011.414-1.414L8 12.586l7.293-7.293a1 1 0 011.414 0z" clip-rule="evenodd" />
              </svg>
              <span class="text-gray-300">{feature}</span>
            </div>
          ))}
        </div>

        <div class="text-center mb-6">
          <div class="text-4xl md:text-5xl font-bold mb-2">{finalCtaSection.price}</div>
          <div class="text-gray-300">{finalCtaSection.priceNote}</div>
        </div>

        <a href={finalCtaSection.ctaLink} class="inline-flex items-center bg-naranja-vibrante text-white px-8 py-4 rounded-xl text-xl font-bold hover:bg-orange-600 hover:scale-105 transition-all duration-300 mb-4">
          {finalCtaSection.ctaText}
        </a>
      </div>
    </div>
  </section>
</Layout>
