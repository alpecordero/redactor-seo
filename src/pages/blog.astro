---
import { getCollection } from 'astro:content';
import Layout from '../layouts/Layout.astro';

const blogPosts = await getCollection('blog');
const sortedPosts = blogPosts
  .sort((a, b) => b.data.pubDate.valueOf() - a.data.pubDate.valueOf())
  .slice(0, 12);

const pageTitle = 'Blog - Redactor SEO';
const pageDescription = 'Artículos sobre SEO, redacción de contenidos y marketing digital. Consejos profesionales para mejorar tu presencia online.';
---

<Layout title={pageTitle} description={pageDescription}>
  <main class="min-h-screen bg-gray-50">
    <!-- Hero Section -->
    <section class="bg-gradient-to-br from-azul-profundo via-gris-carbon to-negro-profundo text-white py-20 md:py-32 lg:py-40">
      <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-12 xl:px-16">
        <div class="text-center">
          <h1 class="text-4xl md:text-5xl lg:text-6xl font-display font-bold mb-6">
            Blog de <span class="text-naranja-vibrante">SEO</span>
          </h1>
          <p class="text-xl md:text-2xl text-white/80 max-w-3xl mx-auto">
            {pageDescription}
          </p>
        </div>
      </div>
    </section>

    <!-- Blog Posts Grid -->
    <section class="py-16">
      <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-12 xl:px-16">
        <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8">
          {sortedPosts.map((post) => (
            <article class="bg-white rounded-2xl shadow-lg overflow-hidden hover:shadow-xl transition-shadow duration-300 group">
              {post.data.heroImage && (
                <div class="relative overflow-hidden">
                  <img
                    src={post.data.heroImage}
                    alt={post.data.title}
                    class="w-full h-48 object-cover group-hover:scale-105 transition-transform duration-300"
                  />
                  <div class="absolute inset-0 bg-gradient-to-t from-black/20 to-transparent opacity-0 group-hover:opacity-100 transition-opacity duration-300"></div>
                </div>
              )}
              
              <div class="p-6">
                <div class="flex items-center text-sm text-gray-500 mb-3">
                  <time datetime={post.data.pubDate.toISOString()}>
                    {post.data.pubDate.toLocaleDateString('es-ES', {
                      year: 'numeric',
                      month: 'long',
                      day: 'numeric'
                    })}
                  </time>
                </div>
                
                <h2 class="text-xl font-display font-bold text-gray-900 mb-3 group-hover:text-naranja-vibrante transition-colors duration-300">
                  <a href={`/blog/${post.slug}`} class="block">
                    {post.data.title}
                  </a>
                </h2>
                
                <p class="text-gray-600 mb-4 line-clamp-3">
                  {post.data.description}
                </p>
                
                {post.data.tags && post.data.tags.length > 0 && (
                  <div class="flex flex-wrap gap-2 mb-4">
                    {post.data.tags.slice(0, 3).map((tag) => (
                      <span class="bg-orange-100 text-orange-800 text-xs px-2 py-1 rounded-full font-medium">
                        {tag}
                      </span>
                    ))}
                  </div>
                )}
                
                <a
                  href={`/blog/${post.slug}`}
                  class="inline-flex items-center text-naranja-vibrante hover:text-orange-700 font-medium transition-colors duration-300"
                >
                  Leer artículo
                  <svg class="w-4 h-4 ml-2 group-hover:translate-x-1 transition-transform duration-300" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"></path>
                  </svg>
                </a>
              </div>
            </article>
          ))}
        </div>
        
        {sortedPosts.length === 0 && (
          <div class="text-center py-12">
            <div class="text-gray-500 text-lg">
              <p class="mb-4">Aún no hay artículos publicados.</p>
              <p>¡Pronto encontrarás contenido valioso sobre SEO y redacción!</p>
            </div>
          </div>
        )}
      </div>
    </section>

    <!-- Newsletter CTA -->
    <section class="bg-gradient-to-r from-azul-profundo to-negro-profundo text-white py-16">
      <div class="max-w-4xl mx-auto text-center px-4 sm:px-6 lg:px-12 xl:px-16">
        <h2 class="text-3xl md:text-4xl font-display font-bold mb-4">
          ¿Quieres recibir más consejos de SEO?
        </h2>
        <p class="text-xl text-white/80 mb-8">
          Suscríbete a mi newsletter y recibe contenido exclusivo sobre redacción SEO directamente en tu email.
        </p>
        <a
          href="/contacto"
          class="inline-block bg-white text-azul-profundo px-8 py-4 rounded-full font-body font-bold hover:bg-gray-100 transition-colors duration-300 shadow-lg"
        >
          Suscribirme
        </a>
      </div>
    </section>
  </main>
</Layout>

<style>
  .line-clamp-3 {
    display: -webkit-box;
    -webkit-line-clamp: 3;
    -webkit-box-orient: vertical;
    overflow: hidden;
  }
</style>