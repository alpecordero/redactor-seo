---
import Layout from '../layouts/Layout.astro'

// Import redaccion-blog content from JSON file
import blogsContent from '../content/redaccion-blog/index.json'

const {
  hero,
  problemsSection,
  approachSection,
  testimonialsSection,
  pricingSection,
  faqSection,
  finalCtaSection
} = blogsContent

const baseUrl = 'https://redactorseo.es'
---

<Layout title={blogsContent.seo.title} description={blogsContent.seo.description}>
  <Fragment slot="head">
    <script type="application/ld+json" set:html={JSON.stringify({
      "@context": "https://schema.org",
      "@graph": [
        {
          "@type": "BreadcrumbList",
          "itemListElement": [
            {
              "@type": "ListItem",
              "position": 1,
              "name": "Inicio",
              "item": baseUrl
            },
            {
              "@type": "ListItem",
              "position": 2,
              "name": "Servicios",
              "item": `${baseUrl}/servicios`
            },
            {
              "@type": "ListItem",
              "position": 3,
              "name": "Redacción Blog",
              "item": `${baseUrl}/redaccion-blog`
            }
          ]
        },
        {
          "@type": "Service",
          "serviceType": "Redacción Estratégica de Blogs",
          "name": "Servicio de Redacción Estratégica de Blogs SEO",
          "description": "Contenido de blog que posiciona tu negocio como referente en los buscadores y que recomienda la IA. Artículos optimizados para SEO con estrategia de contenido.",
          "url": `${baseUrl}/redaccion-blog`,
          "provider": {
            "@type": "ProfessionalService",
            "name": "Redactor SEO",
            "url": baseUrl
          },
          "areaServed": {
            "@type": "Country",
            "name": "España"
          },
          "offers": pricingSection.packages.map(pkg => ({
            "@type": "Offer",
            "name": pkg.name,
            "availability": "https://schema.org/InStock",
            "price": pkg.price,
            "priceCurrency": "EUR"
          }))
        },
        {
          "@type": "FAQPage",
          "mainEntity": faqSection.questions.map(faq => ({
            "@type": "Question",
            "name": faq.question,
            "acceptedAnswer": {
              "@type": "Answer",
              "text": faq.answer
            }
          }))
        },
        ...testimonialsSection.testimonials.map(testimonial => ({
          "@type": "Review",
          "reviewRating": {
            "@type": "Rating",
            "ratingValue": "5",
            "bestRating": "5"
          },
          "author": {
            "@type": "Person",
            "name": testimonial.name
          },
          "reviewBody": testimonial.quote,
          "itemReviewed": {
            "@type": "Service",
            "name": "Servicio de Redacción Estratégica de Blogs SEO",
            "url": `${baseUrl}/redaccion-blog`
          }
        }))
      ]
    })} />
  </Fragment>
  <!-- SECCIÓN 1: Hero Hook -->
  <section class="relative py-16 md:py-20 lg:py-24 bg-white overflow-hidden">
    <!-- Subtle background elements -->
    <div class="absolute inset-0">
      <div class="absolute top-20 right-20 w-32 h-32 bg-gray-50 rounded-full -z-10"></div>
      <div class="absolute bottom-32 left-16 w-20 h-20 bg-naranja-vibrante/5 rounded-full -z-10"></div>
    </div>

    <div class="relative px-4 sm:px-6 lg:px-12 xl:px-16 w-full">
      <div class="max-w-3xl mx-auto text-center">
        <!-- H1 principal -->
        <div class="mb-8 lg:mb-12">
          <h1 class="text-sm font-medium tracking-wide text-gray-500 uppercase">{hero.subtitle}</h1>
        </div>

        <p class="text-4xl md:text-5xl lg:text-6xl font-bold text-gray-900 leading-tight mb-8 lg:mb-12">
          {hero.titlePart1}
          <span class="block text-naranja-vibrante mt-4">{hero.titlePart2}</span>
        </p>

        <p class="text-xl md:text-2xl text-gray-600 leading-relaxed mb-12 lg:mb-16 max-w-2xl mx-auto">
          {hero.description}
        </p>

        <a href={hero.ctaLink} class="bg-azul-profundo text-white px-10 py-5 rounded-lg text-xl font-bold hover:bg-gray-800 hover:scale-105 transition-all duration-300 inline-block shadow-lg">
          {hero.ctaText}
        </a>

        <!-- Flecha de scroll -->
        <div class="mt-16 mb-0 flex justify-center">
          <div class="animate-bounce">
            <svg width="40" height="40" viewBox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg" class="text-naranja-vibrante">
              <path d="M7 13L12 18L17 13M12 6V17" stroke="currentColor" stroke-width="2.5" stroke-linecap="round" stroke-linejoin="round"/>
            </svg>
          </div>
        </div>
      </div>
    </div>
  </section>

  <!-- SECCIÓN 2: Problemas comunes -->
  <section class="py-20 md:py-32 lg:py-40 bg-gray-50">
    <div class="max-w-4xl mx-auto px-4 sm:px-6 lg:px-12 xl:px-16">
      <div class="text-center">
        <h2 class="text-3xl md:text-4xl font-display font-bold text-gray-900 mb-8">
          {problemsSection.title}
        </h2>
        <div class="text-xl text-gray-600 mb-12 leading-relaxed max-w-3xl mx-auto">
          <p>{problemsSection.subtitle}</p>
        </div>
        <div class="space-y-8 max-w-3xl mx-auto mb-12">
          {problemsSection.problems.map((item) => (
            <div class="flex items-center justify-center gap-4">
              <p class="text-lg text-gray-600 flex-1 text-right">"{item.problem}"</p>
              <div class="flex-shrink-0">
                <svg width="24" height="24" viewBox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg" class="text-naranja-vibrante">
                  <path d="M13 7L18 12L13 17M6 12H18" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/>
                </svg>
              </div>
              <p class="text-lg text-gray-900 flex-1 text-left font-medium">{item.consequence}</p>
            </div>
          ))}
        </div>

        <div class="text-xl text-gray-600 leading-relaxed max-w-3xl mx-auto">
          <p set:html={problemsSection.closingText}></p>
        </div>
      </div>
    </div>
  </section>

  <!-- SECCIÓN 3: Mi enfoque -->
  <section class="py-20 md:py-32 lg:py-40 bg-white">
    <div class="max-w-4xl mx-auto px-4 sm:px-6 lg:px-12 xl:px-16">
      <div class="text-center mb-16">
        <h2 class="text-3xl md:text-4xl font-display font-bold text-gray-900 mb-8">
          {approachSection.title}
        </h2>
        <div class="text-xl text-gray-600 mb-12 leading-relaxed max-w-3xl mx-auto">
          <p>{approachSection.subtitle}</p>
        </div>

        <!-- Enfoque simple y directo -->
        <div class="max-w-2xl mx-auto space-y-12">
          {approachSection.points.map((point, index) => (
            <div class="text-left">
              <div class="flex items-start gap-4 mb-3">
                <div class="w-8 h-8 rounded-full bg-gray-800 flex items-center justify-center flex-shrink-0">
                  <span class="text-white font-bold text-sm">{index + 1}</span>
                </div>
                <h3 class="text-xl font-semibold text-gray-900 flex-1 pt-0.5">{point.title}</h3>
              </div>
              <p class="text-lg text-gray-600 leading-relaxed ml-12" set:html={point.description}></p>
            </div>
          ))}
        </div>

        <!-- Mensaje final -->
        <div class="mt-16 max-w-3xl mx-auto">
          <p class="text-xl text-gray-600 leading-relaxed text-center">
            {approachSection.conclusion}
          </p>
        </div>
      </div>
    </div>
  </section>

  <!-- SECCIÓN 4: Casos de éxito -->
  <section class="py-20 md:py-32 lg:py-40 bg-gray-50">
    <div class="max-w-4xl mx-auto px-4 sm:px-6 lg:px-12 xl:px-16">
      <div class="text-center mb-16">
        <h2 class="text-3xl md:text-4xl font-display font-bold text-gray-900 mb-4">
          {testimonialsSection.title}
        </h2>
      </div>

      <div class="space-y-12 max-w-3xl mx-auto">
        {testimonialsSection.testimonials.map((testimonial) => (
          <div class="border-l-4 border-gray-200 pl-6">
            <blockquote class="text-lg text-gray-600 leading-relaxed mb-4">
              "{testimonial.quote}"
            </blockquote>
            <cite class="text-gray-900 font-medium">{testimonial.author}</cite>
          </div>
        ))}
      </div>
    </div>
  </section>

  <!-- SECCIÓN 5: Qué Incluye Exactamente -->
  <section class="py-20 md:py-32 lg:py-40 bg-white">
    <div class="max-w-6xl mx-auto px-4 sm:px-6 lg:px-12 xl:px-16">
      <div class="text-center mb-12">
        <h2 class="text-2xl md:text-3xl font-bold text-gray-900 mb-4">
          {pricingSection.title}
        </h2>
        <p class="text-lg text-gray-600 max-w-2xl mx-auto">
          {pricingSection.subtitle}
        </p>
      </div>

      <!-- Grid de 2 paquetes -->
      <div class="grid grid-cols-1 md:grid-cols-2 gap-8 items-stretch max-w-5xl mx-auto">
        {pricingSection.packages.map((pkg, index) => (
          <div class={`bg-white rounded-2xl p-8 transition-all duration-300 flex flex-col ${
            pkg.isPopular
              ? 'border-2 border-naranja-vibrante shadow-2xl relative'
              : 'border-2 border-gray-200 hover:border-gray-300 hover:shadow-lg'
          }`}>
            {/* Badge "Más popular" para el intensivo */}
            {pkg.isPopular && (
              <div class="absolute -top-4 left-1/2 transform -translate-x-1/2">
                <span class="bg-naranja-vibrante text-white text-xs font-bold px-4 py-1.5 rounded-full uppercase tracking-wide">
                  MÁS RESULTADOS
                </span>
              </div>
            )}

            {/* Header del paquete */}
            <div class="text-center mb-8">
              <h3 class={`text-2xl font-bold mb-2 ${pkg.isPopular ? 'text-azul-profundo' : 'text-azul-profundo'}`}>
                {pkg.name}
              </h3>
              <p class="text-sm text-gray-500 mb-8">{pkg.articles}</p>
              <div class={`text-5xl font-bold ${pkg.isPopular ? 'text-azul-profundo' : 'text-azul-profundo'}`}>
                {pkg.price}<span class="text-3xl">{pkg.currency}</span>
              </div>
            </div>

            {/* Características */}
            <div class="mb-8 flex-grow">
              <div class="space-y-3">
                {pkg.includes.map((item) => (
                  <div class="flex items-start space-x-2">
                    <svg class="w-5 h-5 text-naranja-vibrante flex-shrink-0 mt-0.5" fill="currentColor" viewBox="0 0 20 20">
                      <path fill-rule="evenodd" d="M16.707 5.293a1 1 0 010 1.414l-8 8a1 1 0 01-1.414 0l-4-4a1 1 0 011.414-1.414L8 12.586l7.293-7.293a1 1 0 011.414 0z" clip-rule="evenodd" />
                    </svg>
                    <span class="text-sm text-gray-700">{item}</span>
                  </div>
                ))}
              </div>
            </div>

            {/* Info adicional */}
            <div class="text-center mb-6">
              <p class="text-xs text-gray-500">Contratación mínima 3 meses</p>
            </div>

            {/* CTA */}
            <div class="text-center">
              <a
                href={pkg.ctaLink}
                class={`w-full inline-block px-6 py-3 rounded-lg font-bold transition-all duration-300 ${
                  pkg.isPopular
                    ? 'bg-naranja-vibrante text-white hover:bg-naranja-vibrante-hover hover:scale-105 text-lg'
                    : 'bg-azul-profundo text-white hover:bg-gray-800 hover:scale-105'
                }`}
              >
                {pkg.ctaText}
              </a>
            </div>
          </div>
        ))}
      </div>

    </div>
  </section>

  <!-- SECCIÓN 6: Destruir Objeciones -->
  <section class="py-20 md:py-32 lg:py-40 bg-gray-50">
    <div class="max-w-4xl mx-auto px-4 sm:px-6 lg:px-12 xl:px-16">
      <div class="text-center mb-16 ">
        <h2 class="text-3xl md:text-4xl font-bold text-gray-900 mb-4">
          {faqSection.title}
        </h2>
      </div>

      <div class="space-y-4 max-w-3xl mx-auto">
        {faqSection.questions.map((faq) => (
          <details class="bg-white rounded-lg border border-gray-200 overflow-hidden group">
            <summary class="flex justify-between items-center p-6 cursor-pointer">
              <h3 class="text-lg font-semibold text-gray-900">
                {faq.question}
              </h3>
              <svg class="w-5 h-5 text-gray-400 group-open:rotate-180 transition-transform duration-200" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 9l-7 7-7-7" />
              </svg>
            </summary>
            <div class="px-6 pb-6">
              <p class="text-gray-600 leading-relaxed" set:html={faq.answer}></p>
            </div>
          </details>
        ))}
      </div>
    </div>
  </section>


  <!-- SECCIÓN 7: CTA Final -->
  <section class="py-20 md:py-32 lg:py-40 bg-black text-white">
    <div class="max-w-4xl mx-auto px-4 sm:px-6 lg:px-12 xl:px-16 text-center">
      <h2 class="text-3xl md:text-4xl font-bold mb-6">{finalCtaSection.title}</h2>
      <p class="text-xl text-gray-300 mb-10 leading-relaxed max-w-3xl mx-auto">
        {finalCtaSection.description}
      </p>
      <a
        href={finalCtaSection.ctaLink}
        class="bg-naranja-vibrante text-white px-8 py-4 rounded-lg text-lg font-bold hover:bg-naranja-vibrante-hover hover:scale-105 transition-all duration-300 inline-block"
      >
        {finalCtaSection.ctaText}
      </a>
    </div>
  </section>
</Layout>

<style>
  .prose {
    max-width: none;
  }
</style>